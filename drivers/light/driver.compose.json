{
    "version": "3.8",
    "name": "light-driver-compose",
    "services": {
        "light-driver": {
            "image": "light-driver:latest",
            "container_name": "light-driver",
            "restart": "unless-stopped",
            "ports": [
                "8080:8080"
            ],
            "environment": {
                "NODE_ENV": "production",
                "LOG_LEVEL": "info"
            },
            "volumes": [
                "./config:/app/config",
                "./logs:/app/logs"
            ],
            "networks": [
                "driver-network"
            ]
        }
    },
    "networks": {
        "driver-network": {
            "driver": "bridge"
        }
    },
    "driver": {
        "name": {
            "en": "Lexman Light"
        },
        "class": "light",
        "capabilities": [
            "onoff",
            "dim"
        ],
        "platforms": [
            "local"
        ],
        "connectivity": [
            "zigbee"
        ],
        "images": {
            "small": "/drivers/light/assets/images/small.png",
            "large": "/drivers/light/assets/images/large.png",
            "xlarge": "/drivers/light/assets/images/xlarge.png"
        },
        "zigbee": {
            "manufacturerName": [
                "LEXMAN"
            ],
            "productId": [
                "DIM Light"
            ],
            "endpoints": {
                "1": {
                    "clusters": [
                        0,
                        4,
                        5,
                        6,
                        8
                    ],
                    "bindings": [
                        6,
                        8
                    ]
                }
            },
            "learnmode": {
                "instruction": {
                    "en": "Toggle the power button on your Lexman device to start pairing."
                }
            }
        },
        "settings": [
            {
                "type": "group",
                "label": {
                    "en": "Device information"
                },
                "children": [
                    {
                        "id": "zb_endpoint_id",
                        "type": "label",
                        "label": {
                            "en": "Endpoint ID"
                        },
                        "value": "1"
                    }
                ]
            }
        ]
    }
}